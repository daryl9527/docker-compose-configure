[mysqld]  
server_id=2
collation-server=utf8_unicode_ci
init-connect='SET NAMES utf8'
character-set-server=utf8
#log-bin=mysql-bin  
#log-bin-index=mysql-bin.index  
#replicate-do-db=reader
skip-name-resolve
general_log = on
general_log_file = /tmp/sql.log
slow_query_log = on
slow-query-log-file = /tmp/slowquery.log
long_query_time = 2